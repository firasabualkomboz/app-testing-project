<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_2"
        android:layout_marginVertical="@dimen/margin_2"
        app:cardCornerRadius="@dimen/radius_6"
        app:cardElevation="@dimen/elevation_2"
        android:orientation="vertical">


        <com.rishabhharit.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_test_image"
            android:transitionName="containerPhoto"
            app:cornerRadius="@dimen/radius_6"
            app:layout_constraintBottom_toTopOf="@+id/txtPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCorners="all" />

    </com.google.android.material.card.MaterialCardView>
</layout>